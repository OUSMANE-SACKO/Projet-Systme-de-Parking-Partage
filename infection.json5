{
    "$schema": "vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "backend/Domain",
            "backend/Application",
            "backend/Infrastructure"
        ],
        "excludes": [
            "backend/Functions"
        ]
    },
    "logs": {
        "text": "tests/reports/infection/infection.log",
        "html": "tests/reports/infection/index.html"
    },
    "mutators": {
        "@default": true
    },
    "testFramework": "phpunit",
    "bootstrap": "backend/Functions/autoloader.php",
    "minMsi": 70,
    "minCoveredMsi": 80,
    "tmpDir": "tests/build/infection"
}