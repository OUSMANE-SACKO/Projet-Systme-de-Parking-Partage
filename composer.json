{
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "infection/infection": "^0.31.9"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "coverage": [
            "./vendor/bin/phpunit -c phpunit.xml --coverage-html tests/reports/coverage --coverage-text",
            "@open-coverage"
        ],
        "open-coverage": "start tests/reports/coverage/index.html",
        "open-mutation": "start tests/reports/infection/index.html",
        "mutation": [
            "./vendor/bin/phpunit -c phpunit.xml --coverage-xml=tests/build/coverage-xml --log-junit=tests/build/junit.xml",
            "infection --configuration=infection.json5 --threads=4",
            "@open-mutation"
        ],
        "full-test": [
            "@coverage",
            "@open-coverage",
            "@mutation",
            "@open-mutation"
        ],

        "coverage-test": [
            "@coverage",
            "@open-coverage"
        ]

    },
    "require": {
        "fpdf/fpdf": "^1.86"
    }
}
